[user]
  name = Josh French
  email = {{ .email }}
[alias]
  co = checkout
  stat = status
  ci = commit
[apply]
  whitespace = nowarn
[push]
  default = upstream
  autoSetupRemote = true
[hub]
  protocol = https
[core]
  excludesfile = /Users/josh/.gitignore
[rerere]
  enabled = true
[init]
  defaultBranch = main
[credential]
  helper = osxkeychain
[diff]
  colorMoved = blocks
[color "diff"]
  oldMoved = magenta
  newMoved = yellow
[gpg]
  format = ssh
[gpg "ssh"]
  program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"
[commit]
  gpgsign = true
