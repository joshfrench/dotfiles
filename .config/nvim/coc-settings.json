{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "go",
    "graphql",
    "javascript",
    "javascriptreact",
    "javascript.jsx",
    "json",
    "markdown",
    "typescript",
    "typescriptreact",
    "typescript.jsx"],
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnInsertLeave": true,
  "diagnostic.errorSign": "●",
  "diagnostic.infoSign": "●",
  "diagnostic.warningSign": "●",
  "diagnostic.maxWindowHeight": 20,
  "diagnostic.messageTarget": "float",
  "diagnostic.checkCurrentLine": true,
  "eslint.filetypes": ["javascript", "javascriptreact", "javascript.jsx", "typescript", "typescriptreact", "typescript.tsx"],
  "eslint.autoFixOnSave": true,
  "javascript.validate.enable": false,
  "languageserver": {
    "flow": {
      "command": "flow",
      "args": ["lsp"],
      "filetypes": ["javascript", "javascriptreact"],
      "initializationOptions": {},
      "requireRootPattern": true,
      "settings": {}
    },
    "lua": {
      "command": "lua-lsp",
      "filetypes": ["lua"]
    }
  },
  "go.goplsPath": "~/go/bin/gopls",
  "go.goplsArgs": ["-remote=auto"],
  "go.goplsOptions": {
    "local": "github.com/Medium/"
  },
  "prettier.requireConfig": true,
  "prettier.disableSuccessMessage": true,
  "suggest.enablePreselect": true,
  "suggest.enablePreview": true,
  "suggest.minTriggerInputLength": 2,
  "tsserver.formatOnType": true
}
