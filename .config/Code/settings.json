{
    // EDITOR
    "editor.lineNumbers": "relative",
    "editor.renderWhitespace": "none",
    "editor.tabSize": 2,
    "editor.cursorBlinking": "solid",
    "editor.fontFamily": "'Sauce Code Pro Nerd Font', Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 15,
    "editor.scrollBeyondLastLine": false,
    "editor.minimap.enabled": false,
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.tabCompletion": "on",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    // FILES
    "files.trimTrailingWhitespace": true,
    // TERMINAL
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    // UI
    // "window.titleBarStyle":"custom",
    "workbench.colorTheme": "Solarized Dark",
    "workbench.sideBar.location": "right",
    "workbench.colorCustomizations": {
        "statusBar.background": "#005f5f",
        "statusBar.noFolderBackground": "#005f5f",
        "statusBar.debuggingBackground": "#005f5f",
        "editorCursor.foreground": "#eee8d5",
        "statusBar.foreground": "#002B36"
    },
    // VIM
    "vim.useSystemClipboard": true,
    "vim.surround": true,
    "vim.hlsearch": true,
    "vim.statusBarColorControl": true,
    "vim.statusBarColors.insert": [
        "#859900",
        "#002B36"
    ],
    "vim.statusBarColors.visual": [
        "#d33682",
        "#002b36"
    ],
    "vim.incsearch": true,
    "vim.normalModeKeyBindings": [
        {
            "before": [
                "<leader>",
                "<space>"
            ],
            "commands": [
                ":nohl"
            ]
        },
        {
            "before": [
                "K"
            ],
            "commands": [
                "editor.action.showHover"
            ]
        },
        {
            "before": [
                "H"
            ],
            "commands": [
                "workbench.action.previousEditor"
            ]
        },
        {
            "before": [
                "L"
            ],
            "commands": [
                "workbench.action.nextEditor"
            ]
        },
        {
            "before": [
                "<leader>",
                "e"
            ],
            "commands": [
                "revealInExplorer"
            ]
        },
        {
            "before": [
                "<leader>",
                "b"
            ],
            "commands": [
                "workbench.action.showEditorsInActiveGroup"
            ]
        },
        {
            "before": [
                "<leader>",
                "B"
            ],
            "commands": [
                "workbench.files.action.focusOpenEditorsView"
            ]
        },
        {
            "before": [
                ":cope"
            ],
            "commands": [
                "workbench.actions.view.problems"
            ]
        },
        {
            "before": [
                "<leader>",
                "A"
            ],
            "commands": [
                "workbench.action.findInFiles"
            ]
        },
        {
            "before": [
                "<leader>",
                "t"
            ],
            "commands": [
                "workbench.action.quickOpen"
            ]
        },
        {
            "before": [
                "g",
                "r"
            ],
            "commands": [
                "editor.action.referenceSearch.trigger"
            ],
            "when": "editorHasReferenceProvider && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor"
        },
        // workbench.actions.view.problems
        // - workbench.action.problems.focus
        // - workbench.action.tasks.toggleProblems
        // - workbench.actions.view.toggleProblems
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        },
        {
            "before": [
                "<backspace>"
            ],
            "after": [
                "x"
            ]
        }
    ],
    // EXTENSIONS
    // "customizeUI.titleBar":"frameless",
    "customizeUI.activityBar": "bottom",
    "subtleBrackets.style": {
        "fontWeight": "bold"
    },
    "editor.matchBrackets": false,
    "workbench.settings.editor": "json",
    "debug.toolBarLocation": "docked",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "workbench.startupEditor": "newUntitledFile"
}